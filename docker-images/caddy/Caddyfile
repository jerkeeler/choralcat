(common) {
    encode gzip
    @http {
        protocol http
    }
    redir @http https://{host}{uri}
}

(choralcat) {
    # 31 days
    header /static/* Cache-Control max-age=2678400

    handle_path /static/* {
        root * /app/staticfiles
        file_server
    }

    handle {
        reverse_proxy 127.0.0.1:8000 {
            header_up Host {host}
        }
    }
}

choralcat.org {
    import common
    import choralcat
}

www.choralcat.org {
    redir https://choralcat.org{uri}
}

choral.keeler.dev {
    import common
    import choralcat
}
